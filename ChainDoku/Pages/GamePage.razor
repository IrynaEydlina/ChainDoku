            border-top: 2px solid black;
        }

        .table-row:nth-child(3n+3) {
            border-bottom: 2px solid black;
        }

    .table-cell {
        border-width: 1px;
        border-style: solid;
        border-color: black;
        height: 10vw;
        height: 10vw;
        vertical-align: middle;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 9vw;
