        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .table-grid {
        display: flex;
        flex-direction: column;
        -webkit-user-select: none; /* Safari */
        -ms-user-select: none; /* IE 10 and IE 11 */
        user-select: none; /* Standard syntax */
        background-color: #f1f2eb;
        width: 90vw;
        margin: auto;
    }

    .table-row {
        width: 100%;
        display: flex;
    }

